# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.mongodb.net/driftly?retryWrites=true&w=majority

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_replace_in_production

# SendGrid API Key (App-wide key for email sending)
SENDGRID_API_KEY=your_sendgrid_api_key

# Stripe API Keys
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Stripe Product/Price IDs
STRIPE_FLOW_PRODUCT_ID=prod_yourproductid
STRIPE_FLOW_PRICE_ID=price_yourpriceid

# reCAPTCHA Secret Key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# App Configuration
FROM_EMAIL=driftly@yourdomain.com
APP_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
